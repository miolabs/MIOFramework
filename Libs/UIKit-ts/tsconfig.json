{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "sourceMap": true,
    "types": [
      "mio-core",
      "foundation"
    ],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/@types",
  },
  "include": ["sources/**/*"],
}